    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Initialize the map - we'll update the view after geocoding
        const map = L.map("map");

        // Add OpenStreetMap tiles
        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
          attribution:
            '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
        }).addTo(map);

        // Create the custom icon for the marker
        const customIcon = L.icon({
          iconUrl:
            "https://cdn0.iconfinder.com/data/icons/small-n-flat/24/678111-map-marker-512.png",
          iconSize: [38, 38],
          iconAnchor: [19, 38],
          popupAnchor: [0, -38],
          className: "airbnb-marker",
        });

        // Function to geocode and center the map on the listing location
        function geocodeLocation() {
          const location = "<%= listing.location %>, <%= listing.country %>";

          if (location) {
            // Use Nominatim geocoding service
            fetch(
              `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(
                location
              )}`
            )
              .then((response) => response.json())
              .then((data) => {
                if (data && data.length > 0) {
                  const lat = parseFloat(data[0].lat);
                  const lon = parseFloat(data[0].lon);

                  // Set the map view to the listing's coordinates with appropriate zoom
                  map.setView([lat, lon], 13);

                  // Add marker at the exact location
                  const marker = L.marker([lat, lon], {
                    icon: customIcon,
                  }).addTo(map);

                  // Add popup with listing info
                  marker
                    .bindPopup(
                      `
                <h5 style="margin: 0; color: #ff385c;"><%= listing.title %></h5>
                <p style="margin: 5px 0 0 0;"><%= listing.location %>, <%= listing.country %></p>
              `
                    )
                    .openPopup();
                } else {
                  // Fallback if location not found - center on country level
                  map.setView([20.5937, 78.9629], 5); // Default center (India)
                  console.warn(
                    "Specific location not found, using default view"
                  );
                }
              })
              .catch((error) => {
                console.error("Error geocoding location:", error);
                // Fallback if geocoding fails
                map.setView([20.5937, 78.9629], 5);
              });
          } else {
            // Fallback if no location provided
            map.setView([20.5937, 78.9629], 5);
          }
        }

        // Call geocoding function
        geocodeLocation();
      });
    </script>

