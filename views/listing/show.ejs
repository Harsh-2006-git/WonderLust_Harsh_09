    <% if(currentUser){ %>
    <div class="review-form mt-4">
      <h4>Add a Review</h4>
      <form method="POST" action="/listings/<%= listing._id %>/review">
        <div class="mb-3">
          <label for="rating" class="form-label">Rating (1-5)</label>
          <input
            type="number"
            id="rating"
            name="review[rating]"
            class="form-control"
            min="1"
            max="5"
            required
          />
        </div>
        <div class="mb-3">
          <label for="comments" class="form-label">Your Comments</label>
          <textarea
            id="comments"
            name="review[comments]"
            class="form-control"
            rows="4"
            required
          ></textarea>
        </div>
        <button type="submit" class="btn">Submit Review</button>
      </form>
    </div>
